{
    "name": "rcrowe/twigbridge",
    "description": "Adds the power of Twig to Illuminate / Laravel 4",
    "keywords": ["laravel", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Crowe",
            "email": "hello@vivalacrowe.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1.12",
        "illuminate/support": "~4.2",
        "illuminate/view": "~4.2"
    },
    "require-dev": {
        "laravel/framework": "~4.2",
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9"
    },
    "suggest": {
        "twig/extensions": "1.0.*"
    },
    "autoload": {
        "psr-0": {
            "TwigBridge": "src/",
            "TwigBridgeTests": "tests/"
        }
    }
}
