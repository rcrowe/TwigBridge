{
    "name": "rcrowe/twigbridge",
    "description": "Adds the power of Twig to Illuminate / Laravel 4",
    "keywords": ["laravel", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Crowe",
            "email": "hello@vivalacrowe.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "illuminate/foundation": "4.0.*",
        "illuminate/filesystem": "4.0.*",
        "mockery/mockery": "0.7.2"
    },
    "suggest": {
        "twig/extensions": "1.0.*"
    },
    "autoload": {
        "psr-0": {
            "TwigBridge": "src/",
            "TwigBridgeTests": "tests/"
        }
    }
}
